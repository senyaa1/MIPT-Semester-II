NAME=patcher

SRCDIR=src
OUTDIR=.

main: ${OUTDIR}/${NAME} 
 
${OUTDIR}/${NAME}: ${SRCDIR}/*.c
	${CC}  ${LDFLAGS} -o $@ $^ ${CFLAGS}

prepare:
	mkdir -p ${OUTDIR} 

clean:
	rm -rf ${OUTDIR}/*

all: prepare main 

.PHONY: all
